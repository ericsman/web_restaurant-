


<div class="maxim">
    <div class="container">
         <div class="row">
            <div class="row">
                <div class="col-md-5 register-left">
                   <img src="1.png" alt="">
                    <h3>S'inscrire</h3>
                    <p class="text">Lorem ipsum dolor sit amet consectetur adipisicing elit. Hic placeat eligendi quo totam sit a ullam, rem facere explicabo aut cum provident. Provident eos error quos inventore velit quae nostrum.</p>
                    <button type="button" class="btn btn-primary">Ici</button>
                </div>
                <div class="col-md-7 register-right" >
                    <h2>Sign in</h2>
                    <%= form_for :user, url: sessions_path, class: 'form-horizontal' do |f|%>
                    <div class="register-form">
                        <div class="form-group">
                            <%= f.text_field :username, class: 'form-control', placeholder:"Username ou email"%>
                        </div>
                     
                   
                        <div class="form-group">
                            <%= f.password_field :password, class: 'form-control', placeholder:"*********"%>
                        </div>
                        
                    </div>
                    <center> <button type="submit" class="btn btn-primary">Se connecter</button></center>
                </div>
                <% end %>
            </div>
        </div>
    </div>
</div>